<section id="vk" class="py-32 bg-obsidian relative overflow-hidden">
  <!-- Grid background -->
  <div class="absolute inset-0 industrial-grid opacity-20 pointer-events-none"></div>

  <div class="relative z-10 max-w-4xl mx-auto px-6">
    <div class="reveal mb-12 text-center">
      <p class="font-mono text-xs tracking-[0.3em] text-amber mb-4">COMPLIANCE PROTOCOL</p>
      <h2 class="font-display font-light text-ivory" style="font-size: clamp(2rem, 5vw, 3.5rem);">
        Voight-Kampff Empathy Test
      </h2>
      <p class="font-mono text-xs text-stone tracking-wider mt-4">
        MANDATORY FOR ALL PERSONNEL // SECTOR 6 DIRECTIVE
      </p>
    </div>

    <!-- Terminal -->
    <div class="reveal reveal-delay-1 terminal">
      <div class="terminal-content space-y-4">
        <p><span class="text-stone/60">[VK-SYSTEM v4.7]</span> <span class="text-amber">INITIALIZING EMPATHY RESPONSE ANALYSIS...</span></p>
        <p><span class="text-stone/60">[CALIBRATING]</span> Pupil dilation tracking: <span class="text-amber-bright">ACTIVE</span></p>
