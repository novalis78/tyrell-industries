<section class="relative py-32 sm:py-40 px-6">
  <div class="max-w-6xl mx-auto">
    <div class="reveal text-center mb-20">
      <p class="font-mono text-xs tracking-[0.4em] text-stone/50 mb-4">OPERATING DIVISIONS</p>
      <h2 class="font-display text-4xl sm:text-5xl font-light text-ivory">Corporate Structure</h2>
    </div>

    <div class="grid md:grid-cols-2 gap-8">
      {divisions.map((div, i) => (
        <div class={`reveal reveal-delay-${(i % 3) + 1} border border-stone/10 bg-obsidian/50 p-8 relative`}>
          <div class="absolute top-0 left-0 right-0 h-[2px] bg-gradient-to-r from-amber via-amber-bright to-amber"></div>

          <div class="flex items-start justify-between mb-4">
            <div>
