---
const divisions = [
  {
    letter: "N",
    name: "NEXUS",
    subtitle: "Cognitive Architecture Division",
    status: "ACTIVE",
    statusType: "active",
    description: "Advanced neural networks and synthetic consciousness. The Nexus series represents the pinnacle of artificial cognitive development.",
    link: "ACCESS PROGRAM"
  },
  {
    letter: "G",
    name: "GENESIS",
    subtitle: "Molecular Design Division",
    status: "ACTIVE",
    statusType: "active",
    description: "Biological engineering at the cellular level. Custom organisms, synthetic tissue, and accelerated evolutionary pathways.",
    link: "ACCESS PROGRAM"
  },
  {
    letter: "P",
    name: "PROMETHEUS",
    subtitle: "Memory Systems Division",
    status: "CLASSIFIED",
    statusType: "classified",
    description: "Implantation of synthetic memories and experiential architectures. [FURTHER DETAILS RESTRICTED]",
    link: "ACCESS PROGRAM"
  }
];
---

<section class="py-32 bg-obsidian">
  <div class="max-w-6xl mx-auto px-6">
    <!-- Section header -->
    <div class="reveal mb-16">
      <p class="font-mono text-xs tracking-[0.3em] text-amber status-active mb-4">DIVISIONS</p>
      <h2 class="font-display text-4xl sm:text-5xl font-light text-ivory">Our Programs</h2>
    </div>

    <!-- Cards grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {divisions.map((div, i) => (
        <div class={`reveal reveal-delay-${(i % 3) + 1} corp-card p-8`}>
          <!-- Top row: icon + status -->
          <div class="flex items-start justify-between mb-6">
            <div class="w-14 h-14 clip-corner border border-amber flex items-center justify-center">
              <span class="text-amber font-mono font-bold text-lg">{div.letter}</span>
            </div>
            <span class={`font-mono text-xs tracking-widest ${div.statusType === 'classified' ? 'status-classified text-red-400' : 'status-active text-amber'}`}>
              {div.status}
            </span>
          </div>

          <!-- Title -->
          <h3 class="text-white uppercase font-bold text-xl mb-2">{div.name}</h3>
          <p class="font-mono text-xs tracking-widest text-stone mb-4">{div.subtitle}</p>

          <!-- Description -->
          <p class="text-stone font-mono text-sm leading-relaxed mb-6">{div.description}</p>

          <!-- Link -->
          <a href="#" class="font-mono text-sm text-amber tracking-wider hover:text-amber-bright transition-colors">
            {div.link} &rarr;
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
