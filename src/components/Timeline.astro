];
---

<section id="timeline" class="py-16 bg-obsidian">
  <div class="max-w-7xl mx-auto px-4">
    <!-- Header -->
    <div class="reveal mb-4">
      <span class="inline-block bg-amber text-void font-mono font-bold text-[10px] tracking-[0.2em] px-3 py-1 clip-corner">
        CORPORATE HISTORY
      </span>
    </div>
    <div class="reveal mb-10 flex flex-col md:flex-row md:items-end md:justify-between gap-4">
      <h2 class="text-ivory">TIMELINE</h2>
      <p class="font-mono text-xs text-stone/60 tracking-wider">
        12 KEY EVENTS // 2019–2040 // OPERATIONAL RECORD
      </p>
    </div>

    <!-- Vertical timeline -->
    <div class="relative">
      {events.map((event, i) => (
        <div class={`reveal reveal-delay-${(i % 3) + 1} relative pl-16 pb-10 border-l-2 border-amber/40 last:pb-0`}>
          <!-- Amber dot on the line — 12px -->
          <div class="absolute -left-[7px] top-0 w-3.5 h-3.5 bg-amber rounded-full"></div>

          <!-- Date badge -->
          <span class="inline-block bg-amber text-void font-mono font-bold text-xs tracking-widest px-3 py-1 clip-corner">
            {event.year}
          </span>

          <!-- Title -->
          <h3 class="text-xl text-ivory mt-3" style="font-size: 1.25rem;">{event.title}</h3>

          <!-- Description -->
          <p class="text-stone font-mono text-[11px] mt-2 leading-relaxed">{event.desc}</p>

          <!-- Operational data line -->
          <p class="font-mono text-[10px] text-amber/60 mt-2">{event.data}</p>
        </div>
      ))}
    </div>
  </div>
</section>
