---
const events = [
  { year: "2019", title: "INCORPORATION", description: "Tyrell Industries founded in Los Angeles. First synthetic biology patents filed." },
  { year: "2020", title: "NEXUS-1 PROTOTYPE", description: "First generation cognitive architecture achieves baseline consciousness metrics." },
  { year: "2021", title: "GENESIS DIVISION", description: "Molecular design program launched. Synthetic tissue production begins." },
  { year: "2022", title: "OFF-WORLD EXPANSION", description: "First corporate contracts for Off-World Colony labor solutions." },
  { year: "2023", title: "NEXUS-6 SERIES", description: "Sixth generation replicants enter production. Indistinguishable from human baseline." },
  { year: "2024", title: "PROMETHEUS INITIATIVE", description: "Memory implantation program achieves full autobiographical integration." },
  { year: "2025", title: "GLOBAL OPERATIONS", description: "Operations expand to 47 territories. Revenue exceeds projections by 340%." },
  { year: "2026", title: "NEXUS-7 ANNOUNCEMENT", description: "Next generation cognitive architecture. Details classified." }
];
---

<section class="py-32 bg-obsidian">
  <div class="max-w-3xl mx-auto px-6">
    <!-- Header -->
    <div class="reveal mb-16">
      <p class="font-mono text-xs tracking-[0.3em] text-amber mb-4">CORPORATE HISTORY</p>
      <h2 class="font-display text-4xl sm:text-5xl font-light text-ivory">Timeline</h2>
    </div>

    <!-- Vertical timeline -->
    <div class="relative">
      {events.map((event, i) => (
        <div class={`reveal reveal-delay-${(i % 3) + 1} relative pl-16 pb-12 border-l-2 border-amber/30 last:pb-0`}>
          <!-- Amber dot on the line -->
          <div class="absolute -left-[9px] top-0 w-4 h-4 bg-amber rounded-full"></div>

          <!-- Date badge -->
          <span class="inline-block bg-amber text-void font-mono font-bold text-xs tracking-widest px-3 py-1 clip-corner">
            {event.year}
          </span>

          <!-- Title -->
          <h3 class="text-xl font-bold text-ivory uppercase mt-4">{event.title}</h3>

          <!-- Description -->
          <p class="text-stone font-mono text-sm mt-2 leading-relaxed">{event.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
