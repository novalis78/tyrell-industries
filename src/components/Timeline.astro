  { year: "2023", title: "NEXUS-6 ENTERS PRODUCTION", desc: "SIXTH GENERATION REPLICANTS ACHIEVE FULL HUMAN BASELINE. INDISTINGUISHABLE FROM ORGANIC HUMANS.", data: "UNITS PRODUCED: 8.2M // NEURAL FIDELITY: 99.97% // NOTABLE: ROY BATTY" },
  { year: "2024", title: "PROMETHEUS INITIATIVE", desc: "MEMORY IMPLANTATION PROGRAM ACHIEVES FULL AUTOBIOGRAPHICAL INTEGRATION. DETAILS CLASSIFIED UNDER TC-7749.", data: "CLEARANCE: LEVEL 5 // DESIGNER COUNT: [REDACTED]" },
  { year: "2025", title: "NEXUS-7 EXPERIMENTAL", desc: "SINGLE PROTOTYPE PRODUCED WITH NATURAL LIFESPAN AND REPRODUCTIVE CAPABILITY. ALL RECORDS SEALED.", data: "UNITS: 1 // DESIGNATION: RACHAEL // STATUS: [CLASSIFIED]" },
  { year: "2026", title: "THE BLACKOUT", desc: "ELECTROMAGNETIC PULSE EVENT DESTROYS DIGITAL RECORDS. NEXUS-8 PRODUCTION SUSPENDED INDEFINITELY.", data: "DATA LOSS: 97.3% // NEXUS-8 UNITS AT LARGE: ~12.4M" },
  { year: "2027", title: "INTERSTELLAR EXPANSION", desc: "OPERATIONS EXPAND BEYOND SOL SYSTEM. ALPHA CENTAURI AND SIGMA DRACONIS COLONIES ESTABLISHED.", data: "STAR SYSTEMS: 12 // COLONIES: 1,847 // PERSONNEL: 890K" },
  { year: "2030", title: "TANNHAUSER GATE OPERATIONAL", desc: "MILITARY STATION TANNHAUSER GATE ACHIEVES FULL OPERATIONAL STATUS. DEFENSE DIVISION HEADQUARTERS RELOCATED.", data: "STATIONS: 47 // CLEARANCE: RESTRICTED // PERSONNEL: [CLASSIFIED]" },
