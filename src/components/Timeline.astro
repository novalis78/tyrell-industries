  { year: "2021", title: "GENESIS DIVISION ESTABLISHED", desc: "MOLECULAR DESIGN PROGRAM LAUNCHED. SYNTHETIC TISSUE PRODUCTION BEGINS AT ORBITAL STATION GEN-1.", data: "TISSUE YIELD: 847KG/DAY // STAFF: 12,000" },
