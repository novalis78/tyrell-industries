---

<section id="nexus" class="py-16 bg-void">
  <div class="max-w-[1600px] mx-auto px-4">
    <!-- Section header -->
    <div class="reveal mb-4">
      <span class="inline-block bg-amber text-void font-mono font-bold text-[10px] tracking-[0.2em] px-3 py-1 clip-corner">
        DEFENSE PRODUCT CATALOGUE
      </span>
    </div>
    <div class="reveal mb-10 flex flex-col md:flex-row md:items-end md:justify-between gap-4">
      <h2 class="text-ivory">NEXUS SERIES</h2>
      <p class="font-mono text-xs text-stone/60 tracking-wider">
        SYNTHETIC HUMAN PRODUCT LINE // GENERATIONS 4–9 // <span class="status-active text-amber">SERIES ACTIVE</span>
      </p>
    </div>

    <!-- Product grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4">
      {models.map((m, i) => (
        <div class={`reveal reveal-delay-${(i % 3) + 1} corp-card p-0 flex flex-col`}>
          <!-- Card header -->
          <div class="p-4 pb-3 border-b border-amber/10">
            <div class="flex items-start justify-between mb-2">
              <span class="font-mono text-amber font-bold text-lg tracking-wider">{m.model}</span>
              <span class={`stamp-${m.stamp}`}>
                {m.status}
              </span>
            </div>
            <p class="font-mono text-[10px] tracking-[0.15em] text-stone">{m.codename}</p>
          </div>

          <!-- Card body -->
          <div class="p-4 flex-1 flex flex-col">
            <!-- Dense spec table -->
            <table class="w-full font-mono text-[11px] mb-3">
              <tbody>
                {m.specs.map((spec) => (
                  <tr class="border-b border-amber/5">
                    <td class="text-stone/50 py-0.5 pr-3">{spec.key}</td>
                    <td class="text-stone text-right py-0.5">{spec.val}</td>
                  </tr>
                ))}
              </tbody>
            </table>

            <p class="text-stone font-mono text-[10px] leading-relaxed flex-1">{m.desc}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
