<!-- Top utility bar -->
<div class="fixed top-0 left-0 right-0 z-[60] bg-void border-b border-amber/10">
  <div class="max-w-[1600px] mx-auto px-4 h-8 flex items-center justify-between">
    <span class="font-mono text-[10px] tracking-[0.2em] text-amber/60">TYRELL CORPORATION NETWORK</span>
    <div class="hidden sm:flex items-center gap-6">
      <span class="font-mono text-[10px] tracking-wider text-stone/50">SYS.STATUS: <span class="text-amber">OPERATIONAL</span></span>
      <span class="font-mono text-[10px] tracking-wider text-stone/50">SECTOR: <span class="text-amber">SOL-3</span></span>
      <span class="font-mono text-[10px] tracking-wider text-stone/50">UPLINK: <span class="text-amber">ACTIVE</span></span>
    </div>
  </div>
</div>

<!-- Main nav -->
<header class="fixed top-8 left-0 right-0 z-50" style="background: rgba(10, 10, 8, 0.92); backdrop-filter: blur(12px); border-bottom: 3px solid #D4A84B;">
  <div class="max-w-[1600px] mx-auto px-4 h-14 flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-3 group">
      <div class="w-9 h-9 flex items-center justify-center">
        <svg viewBox="0 0 64 64" class="w-full h-full" fill="none">
          <polygon points="32,20 50,54 14,54" stroke="#D4A84B" stroke-width="2.5" fill="none"/>
          <ellipse cx="32" cy="18" rx="8" ry="6" stroke="#D4A84B" stroke-width="1.5" fill="none"/>
          <circle cx="29" cy="17" r="2" fill="#F4C563"/>
          <circle cx="35" cy="17" r="2" fill="#F4C563"/>
          <line x1="26" y1="13" x2="24" y2="9" stroke="#D4A84B" stroke-width="1.5" stroke-linecap="round"/>
          <line x1="38" y1="13" x2="40" y2="9" stroke="#D4A84B" stroke-width="1.5" stroke-linecap="round"/>
        </svg>
      </div>
      <span class="text-lg text-ivory tracking-wider font-black group-hover:text-amber transition-colors">TYRELL CORPORATION</span>
    </a>

    <!-- Desktop Nav -->
    <nav class="hidden lg:flex items-center gap-6">
      <a href="#operations" class="font-mono text-[11px] tracking-widest text-stone hover:text-amber transition-colors">OPERATIONS</a>
      <a href="#nexus" class="font-mono text-[11px] tracking-widest text-stone hover:text-amber transition-colors">NEXUS PROGRAM</a>
      <a href="#divisions" class="font-mono text-[11px] tracking-widest text-stone hover:text-amber transition-colors">DIVISIONS</a>
      <a href="#compliance" class="font-mono text-[11px] tracking-widest text-stone hover:text-amber transition-colors">COMPLIANCE</a>
      <a href="#timeline" class="font-mono text-[11px] tracking-widest text-stone hover:text-amber transition-colors">TIMELINE</a>
      <a href="#vk" class="btn-primary text-[10px] py-2 px-4">VK TESTING</a>
    </nav>

    <!-- Mobile Menu Button -->
    <button id="mobile-toggle" class="lg:hidden flex flex-col gap-[5px] p-2" aria-label="Toggle menu">
      <span class="block w-5 h-px bg-amber transition-all" id="bar1"></span>
      <span class="block w-5 h-px bg-amber transition-all" id="bar2"></span>
      <span class="block w-3 h-px bg-amber transition-all" id="bar3"></span>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="lg:hidden hidden border-t border-amber/20 bg-void/95 backdrop-blur-xl">
    <nav class="flex flex-col py-4 px-4 gap-3">
      <a href="#operations" class="font-mono text-sm tracking-widest text-stone hover:text-amber transition-colors py-2">OPERATIONS</a>
      <a href="#nexus" class="font-mono text-sm tracking-widest text-stone hover:text-amber transition-colors py-2">NEXUS PROGRAM</a>
      <a href="#divisions" class="font-mono text-sm tracking-widest text-stone hover:text-amber transition-colors py-2">DIVISIONS</a>
      <a href="#compliance" class="font-mono text-sm tracking-widest text-stone hover:text-amber transition-colors py-2">COMPLIANCE</a>
      <a href="#timeline" class="font-mono text-sm tracking-widest text-stone hover:text-amber transition-colors py-2">TIMELINE</a>
      <a href="#vk" class="font-mono text-sm tracking-widest text-amber hover:text-amber-bright transition-colors py-2">VK TESTING ACCESS</a>
    </nav>
  </div>
</header>

<script>
  const toggle = document.getElementById('mobile-toggle');
  const menu = document.getElementById('mobile-menu');
  toggle?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
  menu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => menu?.classList.add('hidden'));
  });
</script>
