<header class="fixed top-0 left-0 right-0 z-50" style="background: rgba(10, 10, 8, 0.85); backdrop-filter: blur(12px); border-bottom: 1px solid rgba(212, 168, 75, 0.1);">
  <div class="max-w-7xl mx-auto px-6 h-16 flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-3 group">
      <div class="w-8 h-8 flex items-center justify-center">
        <svg viewBox="0 0 32 32" class="w-full h-full" fill="none">
          <polygon points="16,2 30,28 2,28" stroke="#D4A84B" stroke-width="1" fill="none" opacity="0.8" />
          <polygon points="16,10 24,28 8,28" stroke="#D4A84B" stroke-width="0.5" fill="none" opacity="0.4" />
          <circle cx="16" cy="12" r="1.5" fill="#F4C563" opacity="0.6" />
        </svg>
      </div>
      <span class="font-display text-lg text-ivory tracking-wider group-hover:text-amber transition-colors">TYRELL</span>
    </a>

    <!-- Desktop Nav -->
    <nav class="hidden md:flex items-center gap-8">
      <a href="#mission" class="font-mono text-xs tracking-widest text-stone hover:text-amber transition-colors">MISSION</a>
      <a href="#nexus" class="font-mono text-xs tracking-widest text-stone hover:text-amber transition-colors">NEXUS SERIES</a>
      <a href="#divisions" class="font-mono text-xs tracking-widest text-stone hover:text-amber transition-colors">DIVISIONS</a>
      <a href="#timeline" class="font-mono text-xs tracking-widest text-stone hover:text-amber transition-colors">TIMELINE</a>
      <a href="#vk" class="btn-primary text-[10px] py-2 px-4">VOIGHT-KAMPFF</a>
    </nav>

    <!-- Mobile Menu Button -->
    <button id="mobile-toggle" class="md:hidden flex flex-col gap-[5px] p-2" aria-label="Toggle menu">
      <span class="block w-5 h-px bg-amber transition-all" id="bar1"></span>
      <span class="block w-5 h-px bg-amber transition-all" id="bar2"></span>
      <span class="block w-3 h-px bg-amber transition-all" id="bar3"></span>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="md:hidden hidden border-t border-amber/10 bg-void/95 backdrop-blur-xl">
    <nav class="flex flex-col py-4 px-6 gap-4">
      <a href="#mission" class="font-mono text-sm tracking-widest text-stone hover:text-amber transition-colors py-2">MISSION</a>
      <a href="#nexus" class="font-mono text-sm tracking-widest text-stone hover:text-amber transition-colors py-2">NEXUS SERIES</a>
      <a href="#divisions" class="font-mono text-sm tracking-widest text-stone hover:text-amber transition-colors py-2">DIVISIONS</a>
      <a href="#timeline" class="font-mono text-sm tracking-widest text-stone hover:text-amber transition-colors py-2">TIMELINE</a>
      <a href="#vk" class="font-mono text-sm tracking-widest text-amber hover:text-amber-bright transition-colors py-2">VOIGHT-KAMPFF ACCESS</a>
    </nav>
  </div>
</header>

<script>
  const toggle = document.getElementById('mobile-toggle');
  const menu = document.getElementById('mobile-menu');
  toggle?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
  // Close on link click
  menu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => menu?.classList.add('hidden'));
  });
</script>
