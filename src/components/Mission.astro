---

<section id="operations" class="py-16 bg-void">
  <div class="max-w-[1600px] mx-auto px-4">
    <!-- Section header -->
    <div class="reveal mb-4">
      <span class="inline-block bg-amber text-void font-mono font-bold text-[10px] tracking-[0.2em] px-3 py-1 clip-corner">
        INTERSTELLAR OPERATIONS
      </span>
    </div>
    <div class="reveal mb-10 flex flex-col md:flex-row md:items-end md:justify-between gap-4">
      <h2 class="text-ivory">INTERSTELLAR PRESENCE</h2>
      <p class="font-mono text-xs text-stone/60 tracking-wider">
        6 OPERATIONAL ZONES // 47 STAR SYSTEMS // 12,847 WORLDS
      </p>
    </div>

    <!-- Zones grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4">
      {zones.map((zone, i) => (
        <div class={`reveal reveal-delay-${(i % 3) + 1} corp-card p-0`}>
          <!-- Card header -->
          <div class="p-4 pb-3 border-b border-amber/10">
            <div class="flex items-start justify-between mb-2">
              <span class="font-mono text-[10px] tracking-[0.2em] text-amber/60">{zone.sector}</span>
              <span class={`font-mono text-[10px] tracking-widest ${
                zone.statusType === 'classified' ? 'stamp-classified' : 'text-amber font-bold'
              }`}>
                {zone.status}
              </span>
            </div>
            <h3 class="text-ivory text-xl tracking-wide" style="font-size: 1.25rem;">{zone.name}</h3>
          </div>

          <!-- Card body â€” dense spec table -->
          <div class="p-4">
            <table class="w-full font-mono text-[11px]">
              <tbody>
                <tr class="border-b border-amber/5">
                  <td class="text-stone/50 py-1 pr-4">COORDINATES</td>
                  <td class="text-stone text-right py-1">{zone.coords}</td>
                </tr>
                <tr class="border-b border-amber/5">
                  <td class="text-stone/50 py-1 pr-4">PERSONNEL</td>
                  <td class="text-amber text-right py-1">{zone.personnel}</td>
                </tr>
                <tr>
                  <td class="text-stone/50 py-1 pr-4">INSTALLATIONS</td>
                  <td class="text-stone text-right py-1">{zone.colonies}</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
