    colonies: "1,847 COLONIES",
    status: "OPERATIONAL",
    statusType: "active",
  },
  {
    sector: "SECTOR 024",
    name: "SIGMA DRACONIS",
    coords: "RA 19h 32m / DEC +69\u00B040'",
    personnel: "641,000",
    colonies: "2,102 COLONIES",
    status: "OPERATIONAL",
    statusType: "active",
  },
  {
    sector: "SECTOR 031",
    name: "TANNHAUSER GATE",
    coords: "RA [REDACTED] / DEC [REDACTED]",
    personnel: "[CLASSIFIED]",
    colonies: "47 STATIONS",
    status: "RESTRICTED",
    statusType: "classified",
  },
  {
