<section class="py-32 bg-void relative">
  <!-- Radial amber glow behind text -->
  <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
    <div
      class="w-[600px] h-[600px] rounded-full"
      style="background: radial-gradient(circle, rgba(212, 168, 75, 0.1), transparent 70%); animation: amber-pulse 6s ease-in-out infinite;"
    ></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-3xl mx-auto px-6 text-center">
    <div class="reveal">
      <blockquote
        class="font-display font-light italic text-ivory amber-glow leading-snug"
        style="font-size: clamp(1.5rem, 4vw, 2.5rem);"
      >
        "The light that burns twice as bright burns half as long &mdash; and you have burned so very, very brightly."
      </blockquote>

      <p class="font-mono text-amber mt-8 tracking-widest text-sm">
        &mdash; Dr. Eldon Tyrell
      </p>
    </div>
  </div>
</section>
