---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Industrial grid background -->
  <div class="absolute inset-0 industrial-grid-dense opacity-40 pointer-events-none"></div>

  <!-- SVG Tyrell Pyramid â€” LARGE, 40% opacity -->
  <div class="absolute inset-0 flex items-end justify-center pointer-events-none">
    <svg viewBox="0 0 1200 700" class="w-full max-w-[90vw] opacity-[0.35]" preserveAspectRatio="xMidYMax meet">
      <defs>
        <linearGradient id="pyramidGrad" x1="0" y1="0" x2="0" y2="1">
          <stop offset="0%" stop-color="#F4C563" stop-opacity="0.9" />
          <stop offset="100%" stop-color="#D4A84B" stop-opacity="0.15" />
        </linearGradient>
        <radialGradient id="pyramidGlow" cx="50%" cy="30%" r="50%">
          <stop offset="0%" stop-color="#D4A84B" stop-opacity="0.4" />
          <stop offset="100%" stop-color="#D4A84B" stop-opacity="0" />
        </radialGradient>
      </defs>
      <ellipse cx="600" cy="400" rx="500" ry="300" fill="url(#pyramidGlow)" />
      <polygon points="600,40 1050,650 150,650" fill="none" stroke="url(#pyramidGrad)" stroke-width="3" />
      <line x1="375" y1="345" x2="825" y2="345" stroke="#D4A84B" stroke-width="2" opacity="0.3" />
      <line x1="450" y1="193" x2="750" y2="193" stroke="#D4A84B" stroke-width="1.5" opacity="0.25" />
      <line x1="300" y1="497" x2="900" y2="497" stroke="#D4A84B" stroke-width="1.5" opacity="0.2" />
      <circle cx="600" cy="60" r="8" fill="none" stroke="#F4C563" stroke-width="1.5" opacity="0.6" />
      <circle cx="600" cy="60" r="3" fill="#F4C563" opacity="0.5" />
    </svg>
  </div>

  <!-- Content -->
  <div class="relative z-10 text-center px-6 max-w-6xl">
    <!-- Owl emblem -->
    <div class="flex justify-center mb-6 opacity-0" style="animation: fade-in 0.4s ease forwards 0.1s;">
      <svg viewBox="0 0 80 80" class="w-20 h-20" fill="none">
        <ellipse cx="40" cy="32" rx="14" ry="11" stroke="#D4A84B" stroke-width="2"/>
        <circle cx="35" cy="30" r="4" fill="none" stroke="#F4C563" stroke-width="1.5"/>
        <circle cx="45" cy="30" r="4" fill="none" stroke="#F4C563" stroke-width="1.5"/>
        <circle cx="35" cy="30" r="1.5" fill="#F4C563"/>
        <circle cx="45" cy="30" r="1.5" fill="#F4C563"/>
        <polygon points="40,33 38,37 42,37" fill="#D4A84B"/>
        <line x1="30" y1="24" x2="27" y2="17" stroke="#D4A84B" stroke-width="2" stroke-linecap="round"/>
        <line x1="50" y1="24" x2="53" y2="17" stroke="#D4A84B" stroke-width="2" stroke-linecap="round"/>
        <path d="M26,32 Q18,38 22,46" fill="none" stroke="#D4A84B" stroke-width="1.5"/>
        <path d="M54,32 Q62,38 58,46" fill="none" stroke="#D4A84B" stroke-width="1.5"/>
        <polygon points="40,45 58,68 22,68" stroke="#D4A84B" stroke-width="2" fill="none"/>
      </svg>
    </div>

    <!-- Corner accents container -->
    <div class="corner-accents p-8 md:p-12">
      <div class="corner-accents-inner">
        <!-- Giant title -->
        <h1
          class="text-ivory amber-glow mb-2 opacity-0"
          style="font-size: clamp(5rem, 15vw, 14rem); animation: fade-up 0.4s cubic-bezier(0.16, 1, 0.3, 1) forwards 0.2s;"
        >
          TYRELL
        </h1>

        <p
          class="font-mono text-amber tracking-[0.3em] text-lg md:text-2xl font-bold opacity-0"
          style="animation: fade-in 0.4s ease forwards 0.3s;"
        >
          CORPORATION
        </p>
      </div>
    </div>

    <!-- Status data bar -->
    <div
      class="mt-8 flex flex-wrap justify-center gap-4 md:gap-8 opacity-0"
      style="animation: fade-in 0.4s ease forwards 0.4s;"
    >
      <span class="font-mono text-[10px] md:text-xs tracking-widest text-stone/60">SECTOR: <span class="text-amber">SOL-3</span></span>
      <span class="font-mono text-[10px] md:text-xs tracking-widest text-stone/40">//</span>
      <span class="font-mono text-[10px] md:text-xs tracking-widest text-stone/60">STATUS: <span class="text-amber">OPERATIONAL</span></span>
      <span class="font-mono text-[10px] md:text-xs tracking-widest text-stone/40">//</span>
      <span class="font-mono text-[10px] md:text-xs tracking-widest text-stone/60">UPLINK: <span class="text-amber">ACTIVE</span></span>
      <span class="font-mono text-[10px] md:text-xs tracking-widest text-stone/40">//</span>
      <span class="font-mono text-[10px] md:text-xs tracking-widest text-stone/60">WORLDS: <span class="text-amber">12,847</span></span>
    </div>
  </div>
</section>
