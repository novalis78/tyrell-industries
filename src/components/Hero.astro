<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Industrial grid background -->
  <div class="absolute inset-0 industrial-grid opacity-30 pointer-events-none"></div>

  <!-- SVG Tyrell Pyramid -->
  <div class="absolute inset-0 flex items-end justify-center pointer-events-none">
    <svg viewBox="0 0 1200 600" class="w-full max-w-6xl opacity-[0.07]" preserveAspectRatio="xMidYMax meet">
      <defs>
        <linearGradient id="pyramidGrad" x1="0" y1="0" x2="0" y2="1">
          <stop offset="0%" stop-color="#F4C563" stop-opacity="0.8" />
          <stop offset="100%" stop-color="#D4A84B" stop-opacity="0.1" />
        </linearGradient>
        <radialGradient id="pyramidGlow" cx="50%" cy="30%" r="50%">
          <stop offset="0%" stop-color="#D4A84B" stop-opacity="0.3" />
          <stop offset="100%" stop-color="#D4A84B" stop-opacity="0" />
        </radialGradient>
      </defs>
      <!-- Ambient glow behind pyramid -->
      <ellipse cx="600" cy="350" rx="400" ry="250" fill="url(#pyramidGlow)" />
      <!-- Main pyramid -->
      <polygon points="600,60 1000,560 200,560" fill="none" stroke="url(#pyramidGrad)" stroke-width="1.5" />
      <!-- Inner terrace lines -->
      <line x1="400" y1="310" x2="800" y2="310" stroke="#D4A84B" stroke-width="0.5" opacity="0.3" />
      <line x1="467" y1="185" x2="733" y2="185" stroke="#D4A84B" stroke-width="0.5" opacity="0.2" />
      <line x1="333" y1="435" x2="867" y2="435" stroke="#D4A84B" stroke-width="0.4" opacity="0.15" />
      <!-- Apex detail -->
      <circle cx="600" cy="80" r="6" fill="none" stroke="#F4C563" stroke-width="0.5" opacity="0.5" />
      <circle cx="600" cy="80" r="2" fill="#F4C563" opacity="0.4" />
    </svg>
  </div>

  <!-- Light sweep animation -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden">
    <div
      class="absolute top-0 bottom-0 w-[200px]"
      style="background: linear-gradient(90deg, transparent, rgba(212, 168, 75, 0.04), transparent); animation: light-sweep 20s ease-in-out infinite;"
    ></div>
  </div>

  <!-- Water ripple reflections -->
  <div class="absolute inset-0 pointer-events-none">
    <div
      class="absolute top-[20%] left-[25%] w-[600px] h-[300px] rounded-full"
      style="background: radial-gradient(ellipse at center, rgba(212, 168, 75, 0.06), transparent 70%); animation: ripple-1 10s ease-in-out infinite;"
    ></div>
    <div
      class="absolute top-[40%] left-[45%] w-[500px] h-[250px] rounded-full"
      style="background: radial-gradient(ellipse at center, rgba(212, 168, 75, 0.04), transparent 70%); animation: ripple-2 13s ease-in-out infinite;"
    ></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 text-center px-6 max-w-5xl">
    <!-- Mono overline -->
    <p
      class="font-mono text-xs tracking-widest text-stone uppercase mb-8 opacity-0"
      style="animation: fade-in 1.5s ease forwards 0.3s;"
    >
      EST. 2019 /// LOS ANGELES
    </p>

    <!-- Giant title -->
    <h1
      class="font-display font-light leading-[0.85] text-ivory amber-glow mb-4 opacity-0"
      style="font-size: clamp(3rem, 12vw, 10rem); animation: fade-up 1.8s cubic-bezier(0.16, 1, 0.3, 1) forwards 0.6s;"
    >
      TYRELL<br />INDUSTRIES
    </h1>

    <!-- Tagline -->
    <p
      class="font-display italic text-2xl text-stone font-light mb-8 opacity-0"
      style="animation: fade-in 1.5s ease forwards 1.0s;"
    >
      More human than human.
    </p>

    <!-- Divider -->
    <div
      class="w-16 h-px bg-amber mx-auto my-8 opacity-0"
      style="animation: fade-in 1.5s ease forwards 1.2s;"
    ></div>

    <!-- Division labels -->
    <p
      class="font-mono text-sm tracking-[0.3em] text-amber opacity-0"
      style="animation: fade-in 1.5s ease forwards 1.5s;"
    >
      NEXUS // GENESIS // PROMETHEUS
    </p>
  </div>

  <!-- Bottom grid line -->
  <div class="absolute bottom-0 left-0 right-0 grid-line"></div>
</section>
